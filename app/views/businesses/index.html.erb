
<div>
  <div id='search-bar'>
    <%= form_tag businesses_path, method: :get do %>
      <%= text_field_tag :search, nil, placeholder: 'search by category', class: 'search-field'%>
      <%= submit_tag 'go', class: 'button'%>
    <% end %>
  </div>
</div>


<section class='all-businesses'>
  <% @businesses.each do |business| %>
    <section class='business'>
      <div class='business-name'>
        <h3><%= link_to business.name, business_path(business), class: "animsition-link" %></h3>
      </div>
      <div class='business-info'>
        <h4><%=business.location%></h4>
      </div>
      <div class='business-images'>
        <% business.photos.each do |photo| %>
         <div>
           <%=image_tag photo.image.url(:square) %>
         </div>
        <% end %>
      </div>
    </section>
  <% end %>
</section>

