<% if message.body %>
 <% user = User.find(message.user_id) %>
 <div class=”item”>
  <div class=”content”>
   <div class=”header”><strong><%= user.first_name %></strong>     <%= message.message_time %></div>
    <div class=”list”>
     <div class=”item”>
      <i class=”right triangle icon”></i>
     <h4 class="msg"> <%= message.body %> </h4>
    </div>
    <% if message.read %>
    <p>Read</p>
    <% end %>
  </div>
 </div>
</div>
<% end %>

